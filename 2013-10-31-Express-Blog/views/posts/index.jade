extends ../template/layout


block content
  .row
     .small-12.columns
      h1 Posts
  .row
    .small-2.columns
      a.button.expand.tiny.radius(href='/') Home
    .small-2.columns
      a.button.expand.tiny.radius(href='/posts') Posts
    .small-2.columns
      a.button.expand.tiny.radius.sucess(href='/posts/new') New
    .small-6.columns
  .row
    .small-12.columns
      #posts
        each post in posts
          .post
            h1.subheader: a(href='/posts/#{post.id}')= post.title
            span= post.author
            span= '   -   '
            span= post.date
            p= post.tags
            img(src=post.image)
            p= post.content
