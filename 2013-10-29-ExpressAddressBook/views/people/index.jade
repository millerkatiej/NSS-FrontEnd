extends ../template/layout

block content
  h1 Address Book
  h2 People Page
  p: a(href="../"): p Home Page
  p: a(href="../people/new"): p New Person
  - var person = people[0]

  if person
    table#people
      thead: tr
        each value, property in person
          th= property
      tbody
        each person, index in people
          tr(style='background-color:#{person.color}', id='#{person.name}-#{index}')
            each value, property in person
              td(class=property)= value
