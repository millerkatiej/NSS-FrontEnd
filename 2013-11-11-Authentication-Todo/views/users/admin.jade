extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-6.columns
      table#users
        thead
          tr
            th Email
            th isAdmin
            th Delete
        tbody
          each user in users
            tr
              td= user.email
              td: input(type='checkbox', checked=user.isAdmin)
              td
                form(action='/users/#{user.id}', method='post')
                  input(type='hidden', name='_method', value='delete')
                  button.tiny.radius.alert(type='submit') Delete
