%head
  %meta{charset: "utf-8"}
  %meta{name: "viewport", content: "width=device-width"}
  %title Foundation 4
  %link{rel: "stylesheet", href: "css/normalize.css"}
  %link{rel: "stylesheet", href: "css/foundation.css"}
  %link{rel: "stylesheet", href: "css/app.css"}
  %script{src: "js/vendor/custom.modernizr.js"}
%body
  .row
    .small-12.columns
      %h1 Stock Market Quote Updater
  .row
    .small-2.columns
      %input#setfunds{type: 'text', autofocus: true, placeholder: 'Set Funds'}
    .small-10.columns
      %input#setbutton.small.button.success{type: 'button', value: 'SET'}
  .row
    .small-2.columns
      %input#symbol{type: 'text', placeholder: 'Symbol'}
    .small-2.columns
      %input#quantity{type: 'text', placeholder: 'Quantity'}
    .small-8.columns
      %input#buybutton.small.button.success{type: 'button', value: 'BUY'}
  .row
    .small-2.columns
      %h5 Balance: $
    .small-10.columns
      %h5#balance
  .row
    .small-9.columns
      %h4 Stock List
    .small-2.columns
      %input#interval{type: 'text', placeholder: 'Interval Time'}
    .small-1.columns
      %input#intervalbutton.button.small.success{type: 'button', value: 'Set'}
  .row
    .small-12.columns
      %table#items
        %tr
          %th Name
          %th Symbol
          %th Purchase Price
          %th Current Value
          %th Quanitity
          %th Total Current Value


  %script{src: 'js/vendor/jquery-1.10.2.js'}
  %script{src: 'js/vendor/foundation.min.js'}
  %script{src: 'js/vendor/underscore.js'}
  %script{src: 'js/vendor/moment.min.js'}
  %script{src: 'https://cdn.firebase.com/v0/firebase.js'}
  %script{src: 'js/app/app.js'}
